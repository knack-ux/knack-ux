{
  "compilerOptions": {
    "declaration": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "*.stories.tsx"
  ]
}
